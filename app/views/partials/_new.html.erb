<%= form_for @product, :url => products_path, :html => {:multipart => true} do |f| %>
  <div class="form-group">
	  <%= f.label :avatar, "picture" %>
	  <%= f.file_field :avatar%>
  </div>
  <div class="form-group">
	  <%= f.label :title %>
	  <%= f.text_field :title, class: "form-control newProduct" %>
  </div>
  <div class="form-group">
	  <%= f.label :price %>
		  <%= f.text_field :price, class: "form-control newProduct" %>
  </div>
  <div class="form-group">
	  <%= f.label :description %>
		  <%= f.text_area :description, class: "form-control newProduct" %>
  </div>
  <div class="form-group">
	  <%= f.label :price_fixed %>
		  <%= f.select :price_fixed,
        options_for_select([ [ 'Yes', true], [ 'No', false] ], true),
        {}, class: 'form-control'%>
  </div>
  <div class="form-group">
	  <%= f.label :category_id %>
  	<%= f.select :category_id, options_for_select(categories_option), {}, class: 'form-control'  %>
  </div>
  <div class="form-group">
	  <%= f.label :condition_id %>
		<%= f.select :condition_id, options_for_select(conditions_option), {}, class: 'form-control' %>
  </div>
  <button type="submit" name="commit" class="btn btn-primary form-control">Submit</button>
<% end %>
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
  <div class="alert alert-success" role="alert"><%= error %></div>
	<% end %>
<% end %>
