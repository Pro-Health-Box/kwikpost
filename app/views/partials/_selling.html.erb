<h1>Selling</h1>
<div class="grid">
  <div class="grid-sizer">
	<% @products.each do |product| %>
        <div class="grid-item">
        <a href="/products/show/<%= product.id %>">
		  <div class="image"><%= image_tag product.avatar.url(:thumb) %></div>
        <p><%= product.title %></p></a>  
        </div>
	<% end %>
  </div>
</div>
</div>