<!--aks modal-->
<div id="buyModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      </div>
      <div class="modal-body">
        <%= image_tag @product.avatar.url(:medium)  %>
        <h3>
          Buy <strong><%= @product.title  %></strong> for
        </h3>
 
      <%= form_for(:chat, :url=>{:controller => 'chats', :action=>'buy'}, method: :post, :html => {:class => "form-horizontal"}) do |f|   %>
      
        <% if @product.price_fixed %>
      
          <div class="form-group">
            <%= f.label :message, ' Fixed price: '  %>
            <%= f.text_field :message, :value => @product.price,  readonly: true,  class: "form-control" %> 
            <%= f.hidden_field :product_id, :value => @product.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
         </div>
         <div class="form-group">
          <div class="col-md-6 col-md-offset-6 col-xs-12">
            <%= f.submit :Buy, class: "btn btn-primary pull-right col-md-6"  %>
          </div>
          </div>

      <% else %>
      <div class="form-group">
        <div class="col-md-12 col-xs-12">
        <%= f.label :message, ' Offer: '  %>
          <%= f.text_field :message, :value => @product.price,  disabled: false,  class: "form-control" %> 
          <%= f.hidden_field :product_id, :value => @product.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <div class="form-group">
          <div class="col-md-6 col-md-offset-6 col-xs-12">
            <%= f.submit :Offer, class: "btn btn-primary pull-right col-md-6"  %>
          </div>
          </div>
        </div>

      </div>
        
        <% end %>
      <% end %>


      </div>
  </div>
  </div>
</div>
